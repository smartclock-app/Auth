{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SmartClock Config Schema v2",
  "type": "object",
  "properties": {
    "$schema": {
      "const": "https://auth.smartclock.app/schema/v2"
    },
    "resolution": {
      "type": "string",
      "pattern": "^[0-9]+x[0-9]+$"
    },
    "alexa": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "userId": {
          "type": "string"
        },
        "token": {
          "type": "string"
        },
        "devices": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false,
      "required": ["enabled", "userId", "token", "devices"]
    },
    "clock": {
      "type": "object",
      "properties": {
        "mainSize": {
          "type": "number"
        },
        "smallSize": {
          "type": "number"
        },
        "dateSize": {
          "type": "number"
        }
      },
      "additionalProperties": false,
      "required": ["mainSize", "smallSize", "dateSize"]
    },
    "calendar": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "clientId": {
          "type": "string"
        },
        "clientSecret": {
          "type": "string"
        },
        "accessToken": {
          "type": "string"
        },
        "refreshToken": {
          "type": "string"
        },
        "maxEvents": {
          "type": "number"
        },
        "monthTitleSize": {
          "type": "number"
        },
        "eventTitleSize": {
          "type": "number"
        },
        "eventTimeSize": {
          "type": "number"
        },
        "eventColorSize": {
          "type": "number"
        }
      },
      "additionalProperties": false,
      "required": [
        "enabled",
        "clientId",
        "clientSecret",
        "accessToken",
        "refreshToken",
        "maxEvents",
        "monthTitleSize",
        "eventTitleSize",
        "eventTimeSize",
        "eventColorSize"
      ]
    },
    "sidebar": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "padding": {
          "type": "number"
        }
      },
      "additionalProperties": false,
      "required": ["enabled", "padding"]
    },
    "weather": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "apiKey": {
          "type": "string"
        },
        "postcode": {
          "type": "string",
          "pattern": "^$|([Gg][Ii][Rr] 0[Aa]{2})|((([A-Za-z][0-9]{1,2})|(([A-Za-z][A-Ha-hJ-Yj-y][0-9]{1,2})|(([A-Za-z][0-9][A-Za-z])|([A-Za-z][A-Ha-hJ-Yj-y][0-9][A-Za-z]?))))\\s?[0-9][A-Za-z]{2})"
        },
        "country": {
          "type": "string",
          "pattern": "^$|^[A-Z]{2}$"
        },
        "units": {
          "type": "string",
          "enum": ["metric", "imperial"]
        }
      },
      "additionalProperties": false,
      "required": ["enabled", "apiKey", "postcode", "country", "units"]
    },
    "dimensions": {
      "type": "object",
      "properties": {
        "clock": {
          "type": "string",
          "pattern": "^[0-9]+,[0-9]+,[0-9]+,[0-9]+$"
        },
        "sidebar": {
          "type": "string",
          "pattern": "^[0-9]+,[0-9]+,[0-9]+,[0-9]+$"
        },
        "weather": {
          "type": "string",
          "pattern": "^[0-9]+,[0-9]+,[0-9]+,[0-9]+$"
        }
      },
      "additionalProperties": false,
      "required": ["clock", "sidebar", "weather"]
    }
  },
  "additionalProperties": false,
  "required": ["resolution", "alexa", "clock", "calendar", "sidebar", "weather", "dimensions"]
}
